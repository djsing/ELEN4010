<!DOCTYPE html>
<html lang="en">

    <head>
        <title>Terms and Conditions</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="/css/bootstrap.min.css">
    </head>

    <body>
        <h1>Terms and Conditions</h1>
        <% preamble.forEach(paragraph =>{ %>
        <p> <%= paragraph %> </p>
        <% }) %>


        <% termList.forEach(subsection => { %>
        <h2> <%- subsection.name -%></h2>
        <ol>
            <% subsection.terms.forEach(term => { %>
            <li> <%- term -%></li>
            <% }) %>
        </ol>
        <% }) %>

        <p>
            <form action="/profile" method="GET">
                <input type="submit" value="Agree to Terms and Conditions" id="agreeToTermsAndConditions">
            </form>
        </p>
    </body>


</html>
